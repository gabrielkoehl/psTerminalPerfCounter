{
    "window.zoomLevel": 0,
    "debug.toolBarLocation": "floating",
    "debug.hover.enabled": true,
    "debug.allowBreakpointsEverywhere": true,
    "debug.showInlineBreakpointCandidates": true,
    "powershell.debugging.createTemporaryIntegratedConsole": true,
    "debug.inlineValues": true,
    "debug.showInStatusBar": "always",
    "workbench.colorCustomizations": {
        "tab.activeBorder": "#39739d",
        "tab.activeForeground": "#fff",
        "tab.activeBackground": "#414242",
        "activityBar.background": "#000",
        "titleBar.activeBackground": "#191919cc",
        "sideBar.background": "#313131",
        "editor.background": "#3a3b3c",
        "terminal.foreground": "#E9E9E9",
        "terminal.background": "#1D1F21",
        "terminal.ansiBlack": "#000000",
        "terminal.ansiBlue": "#2472C8",
        "terminal.ansiCyan": "#11A8CD",
        "terminal.ansiGreen": "#0DBC79",
        "terminal.ansiMagenta": "#BC3FBC",
        "terminal.ansiRed": "#CD3131",
        "terminal.ansiWhite": "#E5E5E5",
        "terminal.ansiYellow": "#E5E510"
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "name": "Comment",
                "scope": [
                    "comment",
                    "comment.block",
                    "comment.line"
                ],
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#8dfcb2"
                }
            }
        ]
    },
    "editor.fontFamily": "Consolas, 'Courier New', monospace",
    "editor.fontSize": 16,
    "editor.lineHeight": 26,
    "editor.letterSpacing": 0.5,
    "editor.tabSize": 5,
    "editor.wordWrap": "off",
    "editor.minimap.enabled": true,
    "editor.minimap.showSlider":"always",
    "workbench.sideBar.location": "left",
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "workbench.colorTheme": "Default Dark+"
}
